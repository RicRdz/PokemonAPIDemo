<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#03A9F4</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_pikachu_pokemon</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.AppCompat</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/design_default_color_primary_dark</item>
        <item name="android:navigationBarColor">@color/design_default_color_primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>